<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginRight="15dp"
                android:id="@+id/txtPlayerDeckSize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:id="@+id/txtOpponentDeckSize" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:id="@+id/txtInfo"
            android:textSize="16sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            android:id="@+id/btnAction" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp">

            <fragment
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:name="edu.ftcc.battlecards.CardFragment"
                android:id="@+id/fragmentHand1"
                tools:layout="@layout/card_fragment" />

            <fragment
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:name="edu.ftcc.battlecards.CardFragment"
                android:id="@+id/fragmentHand2"
                tools:layout="@layout/card_fragment" />

            <fragment
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:name="edu.ftcc.battlecards.CardFragment"
                android:id="@+id/fragmentHand3"
                tools:layout="@layout/card_fragment" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginLeft="35dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <fragment
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:name="edu.ftcc.battlecards.CardFragment"
                android:id="@+id/fragmentOpponentField1"
                tools:layout="@layout/card_fragment" />

            <fragment
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:name="edu.ftcc.battlecards.CardFragment"
                android:id="@+id/fragmentOpponentField2"
                tools:layout="@layout/card_fragment" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <fragment
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:name="edu.ftcc.battlecards.CardFragment"
                android:id="@+id/fragmentPlayerField1"
                tools:layout="@layout/card_fragment" />

            <fragment
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:name="edu.ftcc.battlecards.CardFragment"
                android:id="@+id/fragmentPlayerField2"
                tools:layout="@layout/card_fragment" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>